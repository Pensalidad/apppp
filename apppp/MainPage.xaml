<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="apppp.MainPage"
        BackgroundColor="{StaticResource BGGray}" >
    <Grid Margin="15" RowDefinitions=".4*,.1*,.1*,.4*">
        <Border Grid.RowSpan="2">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20,20,20,20"/>
            </Border.StrokeShape>
            <Grid RowDefinitions=".3*,.7*">
                 <Image Grid.RowSpan="2"
                       Aspect="AspectFill"
                        Source="cad.jpg"/>

                <Grid ColumnDefinitions="*,*">
                    <Border Margin="15,35,0,0"
                            BackgroundColor="{StaticResource DarkGray}"
                            HeightRequest="50"
                            HorizontalOptions="Start"
                            VerticalOptions="Start"
                            WidthRequest="50">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10,10,10,10"/>
                        </Border.StrokeShape>
                        <Label
                            FontFamily="Icons"
                            FontSize="25"
                            HorizontalOptions="Center"
                            Text="&#xE801;"
                            TextColor="{StaticResource LightGray}"
                            VerticalOptions="CenterAndExpand"/>
                    </Border>
                    <Border 
                        Grid.Column="1"
                        Margin="0,35,15,0"
                            BackgroundColor="{StaticResource DarkGray}"
                            HeightRequest="50"
                            HorizontalOptions="End"
                            VerticalOptions="Start"
                            WidthRequest="50">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10,10,10,10"/>
                        </Border.StrokeShape>
                        <Label
                            FontFamily="Icons"
                            FontSize="25"
                            HorizontalOptions="Center"
                            Text="&#xE800;"
                            TextColor="{StaticResource LightGray}"
                            VerticalOptions="CenterAndExpand"/>
                    </Border>
                </Grid>
                   
            </Grid>
        </Border>
        <Border Grid.Row="1"
                Grid.RowSpan="2"
                Stroke="{StaticResource DarkGray}">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="30,30,30,30"/>
            </Border.StrokeShape>
            <Grid Padding="20"
                  BackgroundColor="{StaticResource DarkGray}"
                  ColumnDefinitions=".5*,.25*,.25*"
                  RowDefinitions="*,*,*">
                <Label Grid.ColumnSpan="2"
                       FontAttributes="Bold"
                       FontFamily="RubikRegular"
                       FontSize="20"
                       Text="Producto"
                       TextColor="white"/>
                <Label
                    Grid.Column="2"
                    FontAttributes="Bold"
                    FontFamily="RubikRegular"
                    FontSize="20"
                    HorizontalTextAlignment="Center"
                    Text="$50"
                    TextColor="{StaticResource Brown}" />
                <Label
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    FontFamily="RubikLight"
                    FontSize="15"
                    Text="usado"
                    TextColor="White" />
                <HorizontalStackLayout Grid.Row="2" Spacing="10">
                    <Label FontFamily="Icons"
                           FontSize="20"
                           HorizontalOptions="Center"
                           Text="&#xE802;"
                           TextColor="{StaticResource Orange}"
                           VerticalOptions="Center"/>
                    <Label FontAttributes="Bold"
                           FontFamily="RubikRegular"
                           FontSize="15"
                           Text="4.5"
                           TextColor="White"
                           VerticalOptions="Center"/>
                    <Label FontFamily="RubikRegular"
                           FontSize="15"
                           Text="(4,4461)"
                           TextColor="{StaticResource LightGray}"
                           VerticalOptions="Center" />
                    
                </HorizontalStackLayout>
                <Button Grid.Row="2"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        BackgroundColor="{StaticResource Brown}"
                        FontFamily="RubikRegular"
                        Text="añadir al carrito"/>

            </Grid>
        </Border>
        <Grid Grid.Row="3" RowDefinitions=".4*,.4*,.2*">
            <VerticalStackLayout Margin="0,20,0,0" Spacing="10">
                <Label
                    FontFamily="RubikRegular"
                    FontSize="16"
                    Text="Descripcion"
                    TextColor="#D9DADA"/>
                <Label FontSize="14" LineHeight="1.3">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span FontFamily="RubikLight"
                                  Text="el producto es algo que ya no uso y que espero que laguien mas le pueda dar un mejor uso para que esto no se quede tirado y sea algo reutilizable"
                                  TextColor="{StaticResource LightGray}"/>
                            <Span FontFamily="RubikLight"
                                  Text="  este fue publicadi¿o hace dos semanas"
                                  TextColor="{StaticResource Brown}"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </VerticalStackLayout>
            <Button Grid.Row="2"
                    BackgroundColor="{StaticResource Brown}"
                    FontFamily="RubikRegular"
                    Text="pedir"/>

        </Grid>
    </Grid>
</ContentPage>
